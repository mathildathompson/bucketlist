<div class="to_do_item <%= to_do_item.completed? ? 'completed' : '' %>">

<div class="name">
	<h3><%= to_do_item.name%></h3>
</div>

	
	

	<div id="style" class="comments-<%=to_do_item.id%>">
		 <% to_do_item.comments.each do |comment| %>
		    <%= render comment %>

		<% end %>
		  
    </div>

    <%= render :partial => 'comments/form', :locals => { :item => to_do_item } %>

	</div>

  



